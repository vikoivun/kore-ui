{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "mocha": true,
        "node": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "airbnb"
    ],
    "settings": {
        "react": {
            "version": "0.13"
        }
    },
    "overrides": [
        {
            // Deployment file seems to follow its own rules
            "files": [ "deploy.js" ],
	    "parserOptions": {
                "ecmaVersion": 5,
                "sourceType": "script",
                "ecmaFeatures": {
                    "jsx": false,
                    "globalReturn": true
                }
            }
        }
    ]
}
